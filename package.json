{
  "name": "argus",
  "version": "1.0.0",
  "description": "A source code management monitoring system written in NodeJS.",
  "keywords": [
    "monitor",
    "git"
  ],
  "main": "index.js",
  "engines": {
    "node": ">=8.6"
  },
  "scripts": {
    "test": "npm run test:lint && npm run && npm run test:unit && npm run test:snyk",
    "test:lint": "cross-env NODE_ENV=test standard --verbose",
    "test:unit": "cross-env NODE_ENV=test mocha src/server/test --reporter=spec --exit",
    "test:snyk": "snyk test",
    "build:development": "cross-env webpack --config webpack.dev.js --mode development --progress --profile --colors",
    "build:production": "cross-env webpack --config webpack.prod.js --mode production --progress --profile --colors",
    "development": "npm run build:development && cross-env NODE_ENV=development nodemon src/server/server.js",
    "production": "npm run build:production && cross-env NODE_ENV=production pm2 start src/server/server.js",
    "restart:server": "pm2 restart server",
    "coverage": "export NODE_ENV=test && istanbul cover _mocha server/test -- --exit",
    "coveralls": "npm run coverage -- --report lcovonly && cat ./coverage/lcov.info | coveralls",
    "docs": "documentation build src/server/**/*.js -f html -o docs",
    "precommit": "npm run test:lint && npm run test:unit"
  },
  "standard": {
    "ignore": [
      "src/client/**",
      "src/server/public/javascripts/app.bundle.js"
    ],
    "env": {
      "mocha": true
    }
  },
  "homepage": "https://github.com/mozillasecurity/argus",
  "repository": {
    "type": "git",
    "url": "https://github.com/mozillasecurity/argus.git"
  },
  "bugs": {
    "url": "https://github.com/mozillasecurity/issues",
    "email": "cdiehl@mozilla.com"
  },
  "author": "Christoph Diehl <cdiehl@mozilla.com>",
  "license": "MPL-2.0",
  "dependencies": {
    "auth0-js": "^9.6.1",
    "axios": "^0.17.1",
    "body-parser": "^1.18.3",
    "compression": "^1.7.2",
    "convict": "^4.3.0",
    "element-ui": "^2.4.1",
    "express": "^4.16.3",
    "express-jwt": "^5.3.1",
    "express-vue": "^5.6.6",
    "express-winston": "^2.5.1",
    "fs-extra": "^6.0.1",
    "helmet": "^3.12.1",
    "jwks-rsa": "^1.2.1",
    "kue": "^0.11.6",
    "kue-scheduler": "^0.7.4",
    "lodash": "^4.17.10",
    "moment": "^2.22.2",
    "mongoose": "^4.13.14",
    "pug": "^2.0.3",
    "serve-favicon": "^2.5.0",
    "simple-git": "^1.96.0",
    "vue": "^2.5.16",
    "vue-loader": "^15.2.4",
    "vue-router": "^3.0.1",
    "winston": "^2.4.3"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "chai-http": "^3.0.0",
    "compression-webpack-plugin": "^1.1.11",
    "coveralls": "^3.0.1",
    "cross-env": "^5.2.0",
    "css-loader": "^0.28.11",
    "documentation": "^5.5.0",
    "file-loader": "^1.1.11",
    "font-awesome": "^4.7.0",
    "husky": "^0.14.3",
    "istanbul": "^0.4.5",
    "jsdoc": "^3.5.5",
    "mocha": "^4.1.0",
    "mocha-lcov-reporter": "^1.3.0",
    "nodemon": "^1.17.5",
    "snyk": "^1.83.0",
    "standard": "^11.0.1",
    "style-loader": "^0.21.0",
    "uglify-es": "github:mishoo/UglifyJS2#harmony",
    "uglifyjs-webpack-plugin": "^1.2.5",
    "url-loader": "^1.0.1",
    "vue-data-tables": "^3.4.0",
    "webpack": "^4.12.0",
    "webpack-cli": "*",
    "webpack-dev-middleware": "^3.1.3",
    "webpack-hot-middleware": "^2.22.2"
  }
}
