{
  "name": "argus",
  "version": "1.0.0",
  "description": "A source code management monitoring system written in NodeJS.",
  "keywords": [
    "monitor",
    "git"
  ],
  "main": "index.js",
  "engines": {
    "node": ">=8.6"
  },
  "scripts": {
    "test": "npm run test:lint && npm run && npm run test:unit && npm run test:snyk",
    "test:lint": "cross-env NODE_ENV=test standard",
    "test:unit": "cross-env NODE_ENV=test mocha server/test --reporter=spec --exit",
    "test:snyk": "snyk test",
    "development": "cross-env NODE_ENV=development pm2 start server/server.js --watch && pm2 logs",
    "production": "cross-env NODE_ENV=production pm2 start server/server.js",
    "coverage": "export NODE_ENV=test && istanbul cover _mocha server/test -- --exit",
    "coveralls": "npm run coverage -- --report lcovonly && cat ./coverage/lcov.info | coveralls",
    "docs": "documentation build server/**/*.js -f html -o docs",
    "precommit": "npm run test:lint && npm run test:unit"
  },
  "standard": {
    "env": {
      "mocha": true
    }
  },
  "homepage": "https://github.com/mozillasecurity/argus",
  "repository": {
    "type": "git",
    "url": "https://github.com/mozillasecurity/argus.git"
  },
  "bugs": {
    "url": "https://github.com/mozillasecurity/issues",
    "email": "cdiehl@mozilla.com"
  },
  "author": "Christoph Diehl <cdiehl@mozilla.com>",
  "license": "MPL-2.0",
  "dependencies": {
    "bcrypt": "^1.0.3",
    "body-parser": "^1.18.2",
    "compression": "^1.7.1",
    "convict": "^4.0.1",
    "eslint": "^4.8.0",
    "express": "^4.16.0",
    "express-vue": "^4.0.13",
    "express-winston": "^2.4.0",
    "fs-extra": "^4.0.2",
    "gitlog": "^3.0.2",
    "helmet": "^3.9.0",
    "jsonwebtoken": "^8.0.1",
    "kue": "^0.11.6",
    "kue-scheduler": "^0.7.4",
    "lodash": "^4.17.4",
    "mongoose": "^4.11.14",
    "simple-git": "^1.77.0",
    "winston": "^2.3.1"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "chai-http": "^3.0.0",
    "coveralls": "^3.0.0",
    "cross-env": "^5.1.1",
    "documentation": "^5.3.3",
    "husky": "^0.14.3",
    "istanbul": "^0.4.5",
    "jsdoc": "^3.5.5",
    "mocha": "^4.0.1",
    "mocha-lcov-reporter": "^1.3.0",
    "snyk": "^1.42.5",
    "standard": "^10.0.3"
  }
}
